{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "include": [
      "./src/**/*.tsx",
      "./src/**/*.ts",
      "./package.json",
      "./biome.json",
      "./tsconfig.json",
      "./tsconfig.node.json",
      "./tailwind.config.js",
      "./postcss.config.js",
      "./vite.config.ts"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "rules": {
      "recommended": true
    }
  }
}
